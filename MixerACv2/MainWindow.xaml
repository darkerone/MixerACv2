<Window x:Class="MixerACv2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MixerACv2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Content="Ajouter des fichiers" Command="{Binding AddFiles}"></Button>
            <Button Content="Vider la liste" Command="{Binding ClearFilesList}"></Button>
            <Button Content="Supprimer la sélection" Command="{Binding RemoveSelectedFile}"></Button>
            <Button Content="Renommage" Command="{Binding RenameFiles}"></Button>
        </StackPanel>
        
        <DataGrid ItemsSource="{Binding Files}" 
                  SelectedItem="{Binding SelectedFile}" 
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ancien nom" Binding="{Binding OldName}">
                </DataGridTextColumn>
                <DataGridTextColumn Header="Nouveau nom" Binding="{Binding NewName}">
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
